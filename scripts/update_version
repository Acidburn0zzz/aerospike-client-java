# Update version in all pom.xml files, commit and tag.

if [ $# -lt 1 ]
then
	echo "Usage: $0 <version>"
	exit
fi

version=$1

cd `dirname $0`
source run_command

cd ..
files="pom.xml client/pom.xml examples/pom.xml benchmarks/pom.xml servlets/pom.xml"

for i in $files
do
	runCommand scripts/package_pom $version $i
done

msg="Update version $version"
git commit -m "$msg" $files
git tag -a -m "$version" $version
git push --tags
